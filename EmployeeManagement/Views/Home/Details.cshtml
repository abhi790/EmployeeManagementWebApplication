@model HomeDetailsViewModel;

@{ 
    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "picture1.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Email : @Model.Employee.Email</h4>
                <h4>Department : @Model.Employee.Department</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" asp-route-id="@Model.Employee.Id"
                   class="btn btn-primary m-1">Back</a>
                @*<a href="@Url.Action("index","home", new { id = Model.Employee.Id})"
                 class="btn btn-primary">Back</a>*@
                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
                @*<a href="#" class="btn btn-primary m-1">Edit</a>*@
                <a asp-controller="home" asp-action="delete" asp-route-id="@Model.Employee.Id" class="btn btn-danger m-1">Delete</a>
                @*<a href="#" class="btn btn-danger m-1">Delete</a>*@
            </div>
        </div>
    </div>


</div>


