@model IEnumerable<Employee>

@{
    
    ViewBag.Title = "Employee List";
}

<div class="card-group">
    @foreach(var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "picture1.jpg");
    <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
        <div class="card-header">
            <h3>@employee.Name</h3>
        </div>
        <img class="card-img-top" height="200" width="auto" src="@photoPath" asp-append-version="true"/>
        <div>
            <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
               class="btn btn-primary m-1">View</a>
            @*<a href="@Url.Action("details","home", new { id = employee.Id})"
        class="btn btn-primary">View</a>*@
            <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
               class="btn btn-primary m-1">Edit</a>
            @*<a href="#" class="btn btn-primary m-1">Edit</a>*@
            @*<a href="#" class="btn btn-danger m-1">Delete</a>*@
            <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id"
               class="btn btn-danger m-1">Delete</a>

        </div>
    </div>
        
    }


</div>

