@model EmployeeEditViewModel
@{
    ViewBag.Tile = "Edit Employee";

    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "picture1.jpg");
}

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <input asp-for="Id" hidden />
    <input asp-for="ExistingPhotoPath"  hidden/>
    <div class="row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Name" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Department" class="col-sm-2 col-form-label form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()"
                    class="form-select">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Photo" class="col-sm-2 col-form-label form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
            </div>
        </div>
    </div>
    <div class="row col-sm-4 offset-4 mb-3">
        <img src="@photoPath" height="200" width="200" asp-append-version="true"/>
        @*Note : When not supplying asp-append-version="true" images not showing on website *@
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3 row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>

        </div>
    </div>

</form>
